<Window
    x:Class="Observer.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Observer"
    xmlns:mainviewmodel="clr-namespace:Observer.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Observer.Models"
    Title="Observer"
    Width="1160"
    Height="705"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.DataContext>
        <mainviewmodel:MainWindowModel />
    </Window.DataContext>
    <Window.InputBindings>
        <KeyBinding Key="Return" Command="{Binding GoStart}" />
    </Window.InputBindings>
    <Window.Resources>
        <Style x:Key="ComboBonuses">
            <Style.Setters>
                <Setter Property="Control.Width" Value="50" />
                <Setter Property="Control.Height" Value="20" />                           
                <Setter Property="Control.HorizontalAlignment" Value="Center" />
                <Setter Property="Control.VerticalAlignment" Value="Center" />
            </Style.Setters>
        </Style>
        <Style x:Key="LabelGroupBox">
            <Setter Property="Control.Padding" Value="0" />
            <Setter Property="Control.HorizontalAlignment" Value="Center" />
            <Setter Property="Control.VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="CheckStart">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ElementName=PutBlueprint, Path=SelectedIndex}" Value="-1">
                    <Setter Property="Button.IsEnabled" Value="False" />
                </DataTrigger>
                <DataTrigger Binding="{Binding ElementName=IndustrySystem, Path=SelectedIndex}" Value="-1">
                    <Setter Property="Button.IsEnabled" Value="False" />
                </DataTrigger>
            </Style.Triggers>
        </Style>        
        <ControlTemplate x:Key="validationFailed">
            <Border BorderBrush="Red" BorderThickness="2">
                <AdornedElementPlaceholder />
            </Border>
        </ControlTemplate>
    </Window.Resources>

