<Window
    x:Class="Observer.Views.RefreshWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Observer"
    xmlns:mainviewmodel="clr-namespace:Observer.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="400"
    Height="417.923"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d" KeyDown="Window_KeyDown">

    <Window.DataContext>
        <mainviewmodel:RefreshWindowModel />
    </Window.DataContext>

    <Grid>
        <ProgressBar
            Name="Progress"
            Width="200"
            Height="18"
            Margin="98,70,94,299"
            IsIndeterminate="{Binding CheckRun}" />
        <TextBox
            Width="280"
            Height="175"
            Margin="57,136,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            IsReadOnly="True"
            Text="{Binding Rezult}"
            TextWrapping="Wrap" />
        <Button
            Name="escButton"
            Margin="236,316,55,40"
            Click="escButton_Click"
            Content="Ок"
            IsEnabled="{Binding CheckEnd}" />
    </Grid>
</Window>
